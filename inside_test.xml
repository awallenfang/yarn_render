<scene version='3.0.0'>
    <default name="spp" value="1"/>
    <default name="res" value="1024"/>

    <integrator type='bundle'/>

    <sensor type="perspective" id="sensor">
        <transform name="to_world">
            <lookat target="1.0, 1.0, 0.0"
                    origin="5.0,5.0, 0.0"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
        </film>
    </sensor>

    <emitter type="directional">
        <vector name="direction" value="-1.0, -1.0, -1.0"/>
        <rgb name="irradiance" value="2.0"/>
    </emitter>
    <emitter type="directional">
        <vector name="direction" value="1.0, -1.0, -1.0"/>
        <rgb name="irradiance" value="1.0"/>
    </emitter>

    <emitter type="point">
        <point name="position" value="0.0, 0.0, 3.0"/>
        <rgb name="intensity" value="1.0"/>
    </emitter>

    <shape type="cylinder">
		<point name="p0" value="0.0, 0.0, -10.0"/>
		<point name="p1" value="0.0, 0.0, 10.0"/>
        <float name="radius" value="5"/>
        <bsdf type="twosided">
           <bsdf type="roughconductor">
                <string name="material" value="Au"/>
                <string name="distribution" value="ggx"/>
                <float name="alpha_u" value="0.05"/>
                <float name="alpha_v" value="0.3"/>
            </bsdf>
        </bsdf>
        
	</shape>
