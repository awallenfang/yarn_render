<scene version='3.0.0'>
    <default name="spp" value="500"/>
    <default name="res" value="1000"/>

    <integrator type='bundle'/>

    <sensor type="perspective" id="sensor">
        <transform name="to_world">
            <lookat target="1.0, 1.0, 0.0"
                    origin="30.0,0.0, 20.0"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
        </film>
        <float name="fov" value="90"/>
    </sensor>

    <emitter type="envmap">
        <string name="filename" value="grey_grass.exr"/>
        <transform name="to_world">
            <rotate value="1., 0., 0." angle="90"/>
        </transform>
    </emitter>

